# Copy this file to terraform.tfvars and fill in your actual values

# AWS Configuration
aws_region = "eu-central-1"

# Hetzner Cloud Configuration
hcloud_token = "your-hetzner-cloud-api-token"
cluster_name = "my-rke2-cluster"

# Server Configuration
server_type     = "cx22"
server_location = "nbg1"
server_image    = "ubuntu-24.04"

# Network Configuration
network_cidr = "10.0.0.0/16"
subnet_cidr  = "10.0.1.0/24"
network_zone = "eu-central"

# SSH Access (Replace with your actual IP for security)
ssh_allowed_ips = [
  "YOUR.IP.ADDRESS.HERE/32"
]

# Cluster Configuration
nb_cp_additional_servers = 1  # Total control plane nodes will be 2 (1 + 1 additional)
nb_worker_servers        = 2

# AWS RDS Configuration
external_datastore_url = "postgres://username:password@your-rds-endpoint:5432/database"
db_username           = "postgres"
allowed_cidr = [
  "10.0.0.0/16"  # Allow access from Hetzner private network
]
allocated_storage_gb = 20
engine_version      = "17.6"
